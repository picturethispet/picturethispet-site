  <script>
    // Global variables
    let stripe;
    let elements;
    let sessionData = {};
    let calculatedTotal = 0;
    let stripeCheckoutLink = '';

    function toggleMenu() {
      const nav = document.querySelector('.site-nav');
      nav.classList.toggle('open');
    }

    // Initialize Stripe
    function initializeStripe() {
      // Replace with your actual Stripe publishable key
      stripe = Stripe('pk_test_your_stripe_publishable_key_here');
      
      // You can initialize Stripe Elements here if you want embedded payment forms
      // For now, we'll focus on the redirect approach you're already using
    }

    // Copy Stripe link to clipboard
    function copyToClipboard() {
      const linkElement = document.getElementById('stripe-redirect-link');
      const link = linkElement.textContent;
      
      if (link && link !== 'Link will be generated based on your session details...') {
        navigator.clipboard.writeText(link).then(() => {
          // Visual feedback
          const copyBtn = document.querySelector('.copy-btn');
          const originalText = copyBtn.textContent;
          copyBtn.textContent = 'Copied!';
          copyBtn.style.background = 'rgba(16, 185, 129, 0.3)';
          
          setTimeout(() => {
            copyBtn.textContent = originalText;
            copyBtn.style.background = '';
          }, 2000);
        }).catch(err => {
          console.error('Failed to copy: ', err);
          alert('Failed to copy link. Please select and copy manually.');
        });
      }
    }

    // Proceed to Stripe checkout
    function proceedToStripe() {
      if (stripeCheckoutLink && stripeCheckoutLink !== '#') {
        // Save payment data before redirect
        const paymentData = {
          ...sessionData,
          paymentMethod: 'stripe',
          paymentTimestamp: new Date().toISOString(),
          stripeCheckoutUrl: stripeCheckoutLink
        };

        // Save redundantly
        try {
          const dataString = JSON.stringify(paymentData);
          localStorage.setItem('ptpPaymentData', dataString);
          localStorage.setItem('ptpPaymentBackup', dataString);
          sessionStorage.setItem('ptpPaymentData', dataString);
          console.log('✅ Payment data saved before Stripe redirect');
        } catch (error) {
          console.warn('⚠️ Storage warning:', error);
        }

        // Redirect to Stripe
        window.location.href = stripeCheckoutLink;
      } else {
        alert('Payment link not available. Please contact support.');
      }
    }

    // Calculate total price
    function calculateTotal(sessionData) {
      let total = 0;
      if (sessionData.session === "Mini") total += 50;
      if (sessionData.session === "Full") total += 100;
      if (sessionData.petCount === "2") total += 40;
      if (sessionData.peopleCount === "2") total += 20;
      return total;
    }

    // Generate Stripe checkout link
    function generateStripeLink(sessionData) {
      const sessionType = sessionData.session?.toLowerCase();
      const location = sessionData.park?.toLowerCase();
      const petCount = sessionData.petCount;
      const peopleCount = sessionData.peopleCount;

      // Map session details to Stripe Checkout links (same as your existing logic)
      if (sessionType === "full") {
        if (location === "cheesman") {
          if (petCount === "1" && peopleCount === "1") {
